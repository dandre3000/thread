{
  "name": "@dandre3000/thread",
  "version": "0.2.0",
  "license": "MIT",
  "author": {
    "name": "DeAundre Payne",
    "email": "apps.fondling796@passinbox.com",
    "url": "https://github.com/dandre3000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dandre3000/thread.git"
  },
  "description": "A class for managing web and node.js Workers.",
  "keywords": [
    "thread",
    "worker",
    "webworker",
    "worker_threads",
    "async",
    "multithreading",
    "parallel",
    "browser",
    "node",
    "bun",
    "deno"
  ],
  "files": [
    "./build/Thread.d.ts",
    "./build/node.index.d.ts",
    "./build/node.index.js",
    "./build/browser.index.d.ts",
    "./build/browser.index.js"
  ],
  "exports": {
    "node": {
      "types": "./build/node.index.d.ts",
      "import": "./build/node.index.js"
    },
    "default": {
      "types": "./build/browser.index.d.ts",
      "import": "./build/browser.index.js"
    }
  },
  "scripts": {
    "build-browser": "tsc -p tsconfig.node.json && bun build --entrypoints ./src/browser.index.ts --outdir ./build --external @dandre3000/is-main-thread --minify-whitespace --minify-syntax",
    "build-node": "tsc -p tsconfig.browser.json && bun build --entrypoints ./src/node.index.ts --outdir ./build --target node --external @dandre3000/is-main-thread --minify-whitespace --minify-syntax",
    "build": "bun run build-node && bun run build-browser",
    "test-node": "node --test ./tests/node.test.js",
    "test-bun": "bun test ./tests/bun.node.test.js && bun test ./tests/bun.browser.test.js",
    "test-deno": "deno test ./tests/deno.node.test.js ./tests/deno.browser.test.js --no-check --allow-read",
    "test": "bun run test-node && bun run test-bun && bun run test-deno",
    "prepack": "bun run build && bun run test"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/deno": "^2.5.0",
    "@types/node": "^24.10.4",
    "expect": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@dandre3000/is-main-thread": "^1.1.2"
  },
  "type": "module"
}